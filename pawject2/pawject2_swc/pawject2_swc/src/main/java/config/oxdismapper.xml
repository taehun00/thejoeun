	<select id="selectAll" resultType="com.pawject2.dto.Disease_ox" parameterType="map">
    select *
    from (
        select row_number() over (order by createdat desc) as rnum,
               oxno, disno, oxquestion, oxanswer, oxcomment, oxbhit, createdat
        from disease_ox
    ) A
    where A.rnum between #{start} and #{end}
</select>
	
	<select resultType="Disease_ox"  id="select" parameterType="Disease_ox">
	SELECT *
	FROM disease_ox
	WHERE oxno = #{oxno}
	</select>
	
</mapper>