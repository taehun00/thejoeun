<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pawject.dao.user.HiddenAnnouncementDao">

    <!-- INSERT -->
    <insert id="insertHidden" parameterType="map">
        INSERT INTO HiddenAnnouncement (userId, announcementId)
        VALUES (#{userId}, #{announcementId})
    </insert>

    <!-- SELECT -->
    <select id="selectByUserId" parameterType="int" resultType="int">
        SELECT announcementId
        FROM HiddenAnnouncement
        WHERE userId = #{userId}
    </select>

    <!-- DELETE (숨김 해제 필요시) -->
    <delete id="deleteHidden" parameterType="map">
        DELETE FROM HiddenAnnouncement
        WHERE userId = #{userId}
          AND announcementId = #{announcementId}
    </delete>

</mapper>
